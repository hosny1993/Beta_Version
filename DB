CREATE TABLE MOVIE_TABLE( _id INTEGER PRIMARY KEY, movie_id INTEGER NOT NULL, movie_name TEXT NOT NULL, release TEXT NOT NULL, rate REAL NOT NULL, poster TEXT NOT NULL, OVERVIEW TEXT NOT NULL);

CREATE TABLE MOVIE_DETAILS_TABLE( _id INTEGER PRIMARY KEY, tagline TEXT NOT NULL, runtime TEXT NOT NULL, revenue TEXT NOT NULL, movie_id_key INTEGER NOT NULL );

CREATE TABLE REVIEWS_TABLE( _id INTEGER PRIMARY KEY, user_name TEXT NOT NULL, user_review TEXT NOT NULL, movie_id_key INTEGER NOT NULL );

CREATE TABLE TRAILERS_TABLE( _id INTEGER PRIMARY KEY, trailer_name TEXT NOT NULL, trailer_key TEXT NOT NULL, movie_id_key INTEGER NOT NULL);

CREATE TABLE FAVOURITE_TABLE( _id INTEGER PRIMARY KEY, trailer_name TEXT NOT NULL, trailer_key TEXT NOT NULL, movie_id_key INTEGER NOT NULL, FOREIGN KEY (movie_id_key) REFERENCES MOVIE_TABLE (movie_id) );
